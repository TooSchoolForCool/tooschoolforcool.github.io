---
layout: default
---
{% if page._styles %}
  <!-- Page/Post style -->
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

<div class="post">
  <header class="post-header">
    <h1 class="post-title" style="text-align: center;">{{ page.title }}</h1>
    <p class="post-description">{{ page.description }}</p>
  </header>

  <article>
    {{ content }}
  </article>

  <br>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% if page.preprint %}
        {% for bib_key in page.related_publications %}
          {% bibliography -f preprint.bib -q @*[key={{bib_key}}]* %}
        {% endfor %}
      {% else %}
        {% for bib_key in page.related_publications %}
          {% bibliography -f papers.bib -q @*[key={{bib_key}}]* %}
        {% endfor %}
      {% endif %}
    </div>
  {% endif %}
</div>
